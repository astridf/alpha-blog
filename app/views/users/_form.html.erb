<%= render 'shared/errors', obj: @user %>

<div class="row signup-form">
  <div class="col-xs-12">
    <%= form_for(@user, :html => {class:"form-horizontal", role:"form"}) do |f| %>
    <div class="form-group">
      <div class="control-label col-sm-2 col-sm-offset-2">
        <%= f.label :username %>
      </div>
      <div class="col-sm-4">
        <%= f.text_field :username, class:"form-control", placeholder:"Enter username", autofocus: true %>
      </div>
    </div>
     <div class="form-group">
      <div class="control-label col-sm-2 col-sm-offset-2">
        <%= f.label :email %>
      </div>
      <div class="col-sm-4">
        <%= f.email_field :email, class:"form-control", placeholder:"Enter email address", autofocus: true %>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-sm-2 col-sm-offset-2">
        <%= f.label :password %>
      </div>
      <div class="col-sm-4">
        <%= f.password_field :password, class:"form-control", placeholder:"Enter a secure password", autofocus: true %>
      </div>
    </div><br>
    <div class="form-group">
  <div class="col-sm-6 col-sm-offset-4">
        <%= f.submit(@user.new_record? ? "SIGN UP" : "UPDATE", class:"btn btn-primary bt-lg btn-xlarge")%>
        <% end %>
<%= link_to "CANCEL", articles_path, class:"btn btn-primary bt-lg btn-xlarge" %>
      </div>
    </div>



  </div>
</div>