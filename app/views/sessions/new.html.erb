<h1 align="center">Log In</h1>

<%= form_for(:session, :html => {class:"form-horizontal", role:"form"}, url: login_path ) do |f| %>
<div class="signup-form">
    <div class="form-group">
      <div class="control-label col-sm-2 col-sm-offset-2">
        <%= f.label :email%>
      </div>
      <div class="col-sm-4">
        <%= f.email_field :email, class:"form-control", placeholder:"Enter email", autofocus: true %>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-sm-2 col-sm-offset-2">
        <%= f.label :password %>
      </div>
      <div class="col-sm-4">
        <%= f.password_field :password, class:"form-control", placeholder:"Enter your password", autocomplete: "off" %>
      </div>
    </div><br>
    <div class="form-group">
      <div class="col-sm-6 col-sm-offset-4">
          <%= f.submit "LOG IN", class:"btn btn-primary bt-lg btn-xlarge login-btn"%>
          <% end %>
          <%= link_to "CANCEL", articles_path, class:"btn btn-primary bt-lg btn-xlarge" %>
      </div>
    </div>
</div><